<h1>Amazon App</h1>
<div class="container" style="padding:20px 0">
<table class="table">
  <thead>
    <tr>
      <td>タイトル</td>
      <td>ASIN</td>
      <td>URL</td>
      <td>画像</td>
    </tr>
  </thead>
  <tbody>
    <p>Amazonからデータ取得: </p>
    <p>
      <%= form_tag('/amazon/crawl', method: :get) do %>
        <% text_field :crawl, :keyword do |f| %>
        <% end %>
      <% end %>
    </p>

    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.asin  %></td>
      <td><%= link_to book.url , book.url %></td>
      <td><%= book.image %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
