<h1>Amazon App</h1>
<div class="container" style="padding:20px 0">
<p>
  <%= form_tag('/amazon/crawl', method: :get) do %>
    <%= label_tag :keyword, "Amazonからデータ取得: " %>
    <%= text_field_tag :keyword %>
    <%= submit_tag "Search" %>
  <% end %>
</p>
<p>
  <%= form_tag('/amazon/complete', method: :get) do %>
    <%= label_tag :complete, "Booksデータを補完: " %>
    <%= submit_tag "Complete" %>
  <% end %>
</p>
<table class="table">
  <thead>
    <tr>
      <td>タイトル</td>
      <td>ASIN</td>
      <td>URL</td>
      <td>画像</td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.asin  %></td>
      <td><%= link_to book.url , book.url %></td>
      <td><%= book.image %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
