<h1>Amazon App</h1>
<div class="container" style="padding:20px 0">
<table class="table">
  <thead>
    <tr><td>書籍</td><td>ASIN</td></tr>
  </thead>
  <tbody>
    <p>検索:</p>
    <p>
      <%= form_tag('/amazon/search', method: :get) do %>
        <% text_field :search, :keyword do |f| %>
        <% end %>
      <% end %>
    </p>

    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.asin  %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
