<%= javascript_include_tag "d3" %>
<%= javascript_include_tag "bootstrap" %>
<div class="container" style="padding:20px 0">
<h1>Amazon App</h1>
<p>キーワードで本のタイトルを検索:</p>
<p>
<%= form_tag('/amazon/search', method: :get) do %>
  <% text_field :search, :keyword do |f| %>
  <% end %>
<% end %>
</p>

<%= render 'graph' %>

<table class="table">
<thead>
<tr>
  <th>From</th>
  <th>To</th>
</tr>
</thead>
<tbody>
<% @links.each do |link| %>
<tr>
  <td><%= link[:from_title] %>
  <td><%= link[:to_title] %>
</tr>
<% end %>
</tbody>
</table>
</div>

